extends ../layouts/account.pug 

block main 
  .form-account 
    h2.inner-title Nhập mã OTP
    p.inner-desc Vui lòng nhập mã OTP để tiếp tục

    form.inner-form(id="otp-password-form")
      .inner-group 
        label(for="otp" class="inner-label") Mã OTP
        input(type="text" id="otp" name="otp" class="inner-control" placeholder="Ví dụ: 123456")
      button(class="inner-button") Xác thực
    .inner-more 
      span Bạn đã nhớ mật khẩu?     
      a(href=`/${pathAdmin}/account/login`) Đăng nhập