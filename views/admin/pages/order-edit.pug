extends ../layouts/default.pug

block main 
  h2.box-title Đơn hàng: OD000001

  //- Section 8
  .section-8 
    form(action="" id="order-edit-form")
      .inner-group 
        label(for="name" class="inner-label") Tên khách hàng
        input(type="text" id="name" name="name")
      .inner-group 
        label(for="phone" class="inner-label") Số điện thoại
        input(type="text" id="phone" name="phone")
      .inner-group.inner-two-col
        label(for="note" class="inner-label") Ghi chú
        textarea(name="note" id="note" textarea-mce) 
      .inner-group 
        label(for="payment" class="inner-label") Phương thức thanh toán
        select(name="payment" id="payment")
          option(value="") Ví Momo
          option(value="") Tiền mặt
