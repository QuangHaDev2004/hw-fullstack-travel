        label(for="createAt" class="inner-label") Ngày đặt
        input(type="datetime-local" id="createAt" name="createAt" value="2025-04-14T10:30" readonly)
      .inner-group 
        label(for="status" class="inner-label") Trạng thái
        select(name="status" id="status")
          option(value="") Khởi tạo
          option(value="") Hoạt động
          option(value="") Dừng hoạt động
      .inner-group
        label(class="inner-label") Danh sách tour
        .inner-order-list 
          .inner-order-item 
            .inner-order-image 
              img(src="/admin/assets/images/image-1.jpg")
