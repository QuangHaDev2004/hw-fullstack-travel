extends ../layouts/account.pug 

block main 
  .form-account 
    h2.inner-title Đổi mật khẩu
    p.inner-desc Vui lòng nhập mật khẩu để tiếp tục

    form.inner-form(id="reset-password-form")
      .inner-group 
        label(for="password" class="inner-label") Mật khẩu
        input(type="password" id="password" name="password" class="inner-control")
      .inner-group 
        label(for="confirmPassword" class="inner-label") Xác nhận mật khẩu
        input(type="password" id="confirmPassword" name="confirmPassword" class="inner-control")
      button(class="inner-button") Thay đổi
    .inner-more 
      span Bạn đã nhớ mật khẩu?   
      a(href=`/${pathAdmin}/account/login`) Đăng nhập
