extends ../layouts/default.pug 
include ../mixins/change-search.pug

block main 
  h2.box-title Nhóm quyền

  //- Section 5
  .section-5
    +change-search()
    .inner-button-create 
      a(href=`/${pathAdmin}/setting/role/create`) + Tạo mới
  //- End Section 5

  //- Section 6
  .section-6 
    .table-2 
      table 
        thead 
          tr 
            th 
              input(type="checkbox" class="custom-check" id="check1")
              label(for="check1" class="custom-icon-checkbox") <i class="fa-solid fa-check"></i>
            th Tên nhóm quyền
            th Mô tả ngắn
            th Hành động
        tbody 
          tr 
            td 
              input(type="checkbox" class="custom-check" id="check2")
              label(for="check2" class="custom-icon-checkbox") <i class="fa-solid fa-check"></i>
            td Quản trị viên
            td Có đầy đủ các quyền
            td
              .inner-buttons
                a(href="#" class="inner-edit") <i class="fa-solid fa-pen-to-square"></i> 
                a(href="#" class="inner-remove") <i class="fa-solid fa-trash-can"></i>
          tr 
            td 
              input(type="checkbox" class="custom-check" id="check3")
              label(for="check3" class="custom-icon-checkbox") <i class="fa-solid fa-check"></i>
            td Quản lý tour
            td Có đầy đủ quyền liên quan đến tour
            td
              .inner-buttons
                a(href="#" class="inner-edit") <i class="fa-solid fa-pen-to-square"></i> 
                a(href="#" class="inner-remove") <i class="fa-solid fa-trash-can"></i>
          tr 
            td 
              input(type="checkbox" class="custom-check" id="check4")
              label(for="check4" class="custom-icon-checkbox") <i class="fa-solid fa-check"></i>
            td Quản lý đơn hàng
            td Có đầy đủ quyền liên quan đến đơn hàng
            td
              .inner-buttons
                a(href="#" class="inner-edit") <i class="fa-solid fa-pen-to-square"></i> 
                a(href="#" class="inner-remove") <i class="fa-solid fa-trash-can"></i>
  //- End Section 6