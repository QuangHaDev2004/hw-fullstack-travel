extends ../layouts/account.pug 

block main 
  .form-account
    h2.inner-title Đăng nhập
    p.inner-desc Vui lòng nhập email và mật khẩu để tiếp tục

    form.inner-form(id="login-form")
      .inner-group 
        label(for="email" class="inner-label") Email
        input(type="email" id="email" name="email" class="inner-control" placeholder="Ví dụ: levana@gmail.com")
      .inner-group 
        label(for="password" class="inner-label") Mật khẩu
        input(type="password" id="password" name="password" class="inner-control")
      .inner-meta 
        .inner-confirm 
          input(type="checkbox" name="rememberPassword" id="rememberPassword" class="custom-check")
          label(for="rememberPassword" class="custom-icon-checkbox") <i class="fa-solid fa-check"></i>
          label(for="rememberPassword" class="inner-label") Nhớ mật khẩu
        a(href=`/${pathAdmin}/account/forgot-password` class="inner-forgot-password") Quên mật khẩu? 
      button(class="inner-button") Đăng Nhập
    .inner-more 
      span Bạn chưa có tài khoản?   
      a(href=`/${pathAdmin}/account/register`) Tạo tài khoản
