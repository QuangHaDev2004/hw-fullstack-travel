extends ../layouts/default.pug
include ../mixins/product-item.pug

block main 
  // Section 1
  .section-1
    .container
      .inner-wrap
        h1.inner-title(
          data-aos-duration="800" 
          data-aos="fade-up"
          ) Du lịch Châu Á - Khám phá Mỹ, Úc, Âu Đi nơi đâu bạn muốn
        p.inner-desc(
          data-aos-delay="200" 
          data-aos-duration="800" 
          data-aos="fade-up"
          )
          | "Tận hưởng những hành trình tuyệt vời, khám phá nền văn hóa đa dạng,
          |   thắng cảnh hùng vĩ và ẩm thực đặc sắc tại mọi điểm đến trên thế
          |   giới!"
        form.inner-form(action="" form-search)
          .inner-box.inner-address
            .inner-input-group
              img.inner-icon(
                alt="" 
                src="/assets/images/address.svg"
                )
              input.inner-input(
                placeholder="Bạn muốn đi đâu?" 
                type="text"
                name="locationTo"
                )
              i.fa-solid.fa-angle-down.inner-down
            .inner-suggest
              .inner-suggest-title
                i.fa-solid.fa-location-dot
                | Địa Điểm Hot
              .inner-suggest-list
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-1.jpg"
                      )
                  .inner-content
                    .inner-title Nhật Bản
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-2.jpg"
                      )
                  .inner-content
                    .inner-title Phú Quốc
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-3.jpg"
                      )
                  .inner-content
                    .inner-title Singapore
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-4.jpg"
                      )
                  .inner-content
                    .inner-title Hà Nội
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-5.jpg"
                      )
                  .inner-content
                    .inner-title Thái Lan
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-6.jpg"
                      )
                  .inner-content
                    .inner-title Sapa
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-7.jpg"
                      )
                  .inner-content
                    .inner-title Bali
                    //- .inner-tour 50 tours
                .inner-item
                  .inner-image
                    img(
                      alt="" 
                      src="/assets/images/suggest-8.jpg"
                      )
                  .inner-content
                    .inner-title Nha Trang
                    //- .inner-tour 50 tours
          .inner-box.inner-user
            .inner-input-group
              img.inner-icon(
                alt="" 
                src="/assets/images/user.svg"
                )
              input.inner-input(
                placeholder="Số lượng" 
                type="text"
                )
              i.fa-solid.fa-angle-down.inner-down
            .inner-quantity
              .inner-item
                .inner-label Người lớn
                .inner-count
                  span.inner-down -
                  span.inner-number(stockAdult) 1
                  span.inner-up +
              .inner-item
                .inner-label Trẻ em
                .inner-count
                  span.inner-down -
                  span.inner-number(stockChildren) 0
                  span.inner-up +
              .inner-item
                .inner-label Em bé
                .inner-count
                  span.inner-down -
                  span.inner-number(stockBaby) 0
                  span.inner-up +
          .inner-box.inner-calendar
            .inner-input-group
              img.inner-icon(
                alt="" 
                src="/assets/images/calendar.svg"
                )
              input.inner-input(
                placeholder="Lịch khởi hành" 
                type="date"
                name="departureDate"
                )
          button.inner-button(type="submit")
            i.fa-solid.fa-magnifying-glass
            | Tìm Kiếm
  // End Section 1

  // Section 2
  .section-2(
    data-aos-delay="200" 
    data-aos-duration="800" 
    data-aos="fade-up"
    )
    .container
      .inner-wrap
        .inner-info
          h2.inner-title ƯU ĐÃI 2025 TOUR GIỜ CHÓT
          p.inner-desc
            | Cơ hội săn vé giá rẻ, khám phá thế giới với mức giá ưu đãi chưa
            |   từng có!
          .inner-clock-title Kết thúc sau
          .inner-clock-number(clock-expire="2025-12-01T00:00:00")
            .inner-item
              .inner-number 00
              .inner-label Ngày
            .inner-item
              .inner-number 00
              .inner-label Giờ
            .inner-item
              .inner-number 00
              .inner-label Phút
            .inner-item
              .inner-number 00
              .inner-label Giây
          .inner-discount-title GIẢM ĐẾN
          .inner-discount-price
            | 990.000
            span.inner-unit đ
        .inner-list
          .swiper.swiper-section-2
            .swiper-wrapper
              each item in tourListSection2
                .swiper-slide
                  +product-item(item)
  // End Section 2

  // Section 3
  .section-3
    .container
      h2.box-title(
        data-aos-delay="200" 
        data-aos-duration="800" 
        data-aos="fade-up"
        ) Khuyến Mại Bùng Nổ - Đánh Tan Nóng Bức
      .inner-wrap(
        data-aos-delay="400" 
        data-aos-duration="800" 
        data-aos="fade-up"
        )
        .swiper.swiper-section-3
          .swiper-wrapper
            .swiper-slide
              .inner-item
                a(href="")
                  img(
                    alt="" 
                    src="/assets/images/section-3-1.jpg"
                    )
            .swiper-slide
              .inner-item
                a(href="")
                  img(
                    alt="" 
                    src="/assets/images/section-3-2.jpg"
                    )
            .swiper-slide
              .inner-item
                a(href="")
                  img(
                    alt="" 
                    src="/assets/images/section-3-3.jpg"
                    )
            .swiper-slide
              .inner-item
                a(href="")
                  img(
                    alt="" 
                    src="/assets/images/section-3-4.webp"
                    )
          .swiper-pagination
  // End Section 3

  // Section 4
  .section-4
    .container
      h2.box-title(
        data-aos-delay="200" 
        data-aos-duration="800" 
        data-aos="fade-up"
        ) #{categorySection4.name}
      .inner-wrap(
        data-aos-delay="400" 
        data-aos-duration="800" 
        data-aos="fade-up"
        )
        each item in tourListSection4
          +product-item(item)
      .inner-button
        a.button-outline(href=`/category/${categorySection4.slug}`) Xem tất cả
  // End Section 4

  // Section 5
  .section-5(
    data-aos-delay="200" 
    data-aos-duration="800" 
    data-aos="fade-up"
    )
    .container
      .inner-image
        a(href="")
          img(
            alt="" 
            src="/assets/images/section-5.jpg"
            )
  // End Section 5

  // Section 6
