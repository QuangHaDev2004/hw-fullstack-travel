        .inner-right(
          data-aos-delay="450" 
          data-aos-duration="800" 
          data-aos="fade-up"
          )
          .box-tour-detail
            .inner-title-main Chuyến Đi Của Bạn
            .inner-product
              .inner-image
                img(
                  alt="" 
                  src=tourDetail.avatar
                  )
              .inner-info
                .inner-title #{tourDetail.name}
                .inner-rating
                  .inner-stars
                    i.fa-solid.fa-star
                    i.fa-solid.fa-star
                    i.fa-solid.fa-star
                    i.fa-solid.fa-star
                    i.fa-regular.fa-star
                  .inner-number 500 lượt đánh giá
            .inner-meta
              .inner-item
                i.fa-solid.fa-ticket-simple
                span Mã Tour:
                b 28T00001
              .inner-item
                i.fa-solid.fa-calendar-days
                span Thời gian:
                b  #{tourDetail.time}
              .inner-item
                i.fa-solid.fa-car
                span Phương tiện:
                b  #{tourDetail.vehicle}
              .inner-item
                i.fa-solid.fa-calendar-days
                span Ngày khởi hành:
                b  #{tourDetail.departureDateFormat}
            .inner-group
              label.inner-label(for="#inner-label") Khởi Hành Tại:
              select(
                id="#inner-label" 
                name=""
                )
                each item in tourDetail.locationsDetail
                  option(value=item.id) #{item.name}
            .inner-group
              label.inner-label Số Lượng Hành Khách
              .inner-list
                .inner-item
                  .inner-item-label Người lớn:
                  input(
                    value="1" 
                    min="0"
                    max=tourDetail.stockAdult
                    type="number"
                    )
                  .inner-price
                    | 1x
                    span #{tourDetail.priceNewAdult.toLocaleString("vi-VN")}
                .inner-item
                  .inner-item-label Trẻ em:
                  input(
                    value="0" 
                    min="0"
                    max=tourDetail.stockChildren
                    type="number"
                    )
                  .inner-price
                    | 0x
                    span #{tourDetail.priceNewChildren.toLocaleString("vi-VN")}
                .inner-item
