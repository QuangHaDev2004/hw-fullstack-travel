extends ../layouts/default.pug
include ../mixins/product-item.pug

block main 
  // Section 9
  .section-9
    .container
      .inner-wrap
        .inner-left
          .box-filter
            .inner-head
              .inner-title Bộ Lọc
              i.fa-solid.fa-filter
            .inner-body
              .inner-group
                .inner-label Điểm đi
                select(name="locationFrom")
                  option(value="") -- Chọn điểm đi --
                  each item in cityList
                    option(value=item.id) #{item.name}
              .inner-group
                .inner-label Điểm đến
                select(name="locationTo")
                  option(value="") -- Chọn điểm đến --
                  each item in cityList
                    option(value=item.name) #{item.name}
              .inner-group
                .inner-label Ngày khởi hành
                input(
                  name="departureDate" 
                  type="date"
                  )
              .inner-group
                .inner-label Số Lượng Hành Khách
                .inner-input-list
                  .inner-input-item
                    .inner-label Người lớn:
                    input(
                      type="number"
                      name="stockAdult"
                      )
                  .inner-input-item
                    .inner-label Trẻ em:
                    input(
                      type="number"
                      name="stockChildren"
                      )
                  .inner-input-item
                    .inner-label Em bé:
                    input(
                      type="number"
                      name="stockBaby"
                      )
              .inner-group
                .inner-label Mức giá
                select(name="price")
                  option(value="") -- Chọn khoảng giá --
                  option(value="0-999999") Dưới 1tr
                  option(value="1000000-3000000") Từ 1tr đến 3tr
                  option(value="3000000-6000000") Từ 3tr đến 6tr
                  option(value="6000000-10000000") Từ 6tr đến 10tr
                  option(value="10000000-1000000000") Trên 10tr
              .inner-group
                button.button-filter Áp Dụng
          .inner-overlay
        .inner-right
          .inner-info
            h2.inner-title #{pageTitle}
          .inner-info-2
            .inner-sort
              .inner-label Sắp xếp :
              button.inner-button
                | Giá tăng dần
                i.fa-solid.fa-square-caret-up
              button.inner-button
                | Giá giảm dần
                i.fa-solid.fa-square-caret-down
              button.inner-button.active
                | Khuyến mãi hot
                i.fa-solid.fa-tag
              button.inner-button
                | Xem nhiều
                i.fa-solid.fa-eye
            .inner-total
              | Tất cả:
              b #{tourList.length} Tour
            .inner-filter-mobile
              .inner-title Bộ lọc
              i.fa-solid.fa-filter
          if(tourList.length > 0)
            .inner-list-tour
              each item in tourList
                +product-item(item)
            .box-pagination
              button
                i.fa-solid.fa-angles-left
              button.active 1
              button 2
              button 3
              button 4
              button
                i.fa-solid.fa-angles-right
          else 
            p Không tìm thấy Tour nào theo yêu cầu.
  // Section 9