mixin box-breadcrumb(list)
  - const itemLast = list[list.length - 1];
  .box-breadcrumb
    .inner-image
      img(
        alt=itemLast.name
        src=itemLast.avatar
        )
    .inner-content
      .container
        h1.inner-title #{itemLast.name}
        nav.inner-list
          a(href="/") Trang Chá»§
          each item, i in list
            if i !== list.length - 1
              a(href=`/category/${item.slug}`) #{item.name}
            else 
              a(href=`javascript:;`) #{item.name}